{
  "compilerOptions": {
    "lib": ["es2015","dom"],
    "module": "es2015",
    "moduleResolution": "Node",
    "target": "es5",
    "declaration": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "alwaysStrict": true,
    "jsx": "React",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true
  },
  "include": [
    "./lib/**/*.ts",
    "./lib/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx"
  ]
}
